<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">


    <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="10dip">

        <CheckBox
                android:id="@+id/box_fence_enter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Enter Fence Event" />

        <CheckBox
                android:id="@+id/box_fence_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:checked="true"
                android:text="Exit Fence Event" />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/textView8"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="S" />

        <TextView
                android:id="@+id/textView7"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="M" />

        <TextView
                android:id="@+id/textView9"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="T" />

        <TextView
                android:id="@+id/textView10"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="W" />

        <TextView
                android:id="@+id/textView11"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="T" />

        <TextView
                android:id="@+id/textView12"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="F" />

        <TextView
                android:id="@+id/textView13"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="S" />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <CheckBox
                android:id="@+id/box_fence_sunday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />

        <CheckBox
                android:id="@+id/box_fence_monday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />

        <CheckBox
                android:id="@+id/box_fence_tuesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />

        <CheckBox
                android:id="@+id/box_fence_wednesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />

        <CheckBox
                android:id="@+id/box_fence_thursday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />

        <CheckBox
                android:id="@+id/box_fence_friday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />

        <CheckBox
                android:id="@+id/box_fence_saturday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />
    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <EditText
                android:id="@+id/input_from_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_access_time_accent_24dp"
                android:ems="10"
                android:focusable="false"
                android:gravity="center"
                android:inputType="time"
                android:onClick="fromTime"
                android:text="00:00:00" />

        <EditText
                android:id="@+id/input_to_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_access_time_accent_24dp"
                android:ems="10"
                android:focusable="false"
                android:gravity="center"
                android:inputType="time"
                android:onClick="toTime"
                android:text="23:59:59" />

    </LinearLayout>

</LinearLayout>